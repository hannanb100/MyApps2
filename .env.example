# APPS2 Global Environment Variables Template
# Copy this file to individual app directories and customize as needed

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/apps2_db
SQLITE_URL=sqlite:///./apps2.db

# API Keys (add as needed for different apps)
OPENAI_API_KEY=your_openai_api_key_here
RESUME_API_KEY=your_resume_api_key_here

# General Settings
DEBUG=True
SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# App-specific variables (copy to individual app .env files)
# Resumebuilder specific
RESUMEBUILDER_TEMPLATE_PATH=./templates
RESUMEBUILDER_OUTPUT_PATH=./output
RESUMEBUILDER_MAX_FILE_SIZE=10485760  # 10MB

# Future app variables
# APP2_SETTING=value
# APP3_SETTING=value
